# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb+srv://<user>:<password>@<cluster>/assetverse?retryWrites=true&w=majority

# Authentication
JWT_SECRET=replace_with_a_strong_secret

# Client URL (comma-separated for multiple origins in production)
# Development: http://localhost:5173
# Production: https://your-app.web.app,https://your-app.firebaseapp.com
CLIENT_ORIGIN=http://localhost:5173

# Stripe Payment (Optional)
STRIPE_SECRET_KEY=

# Cloudinary Image Upload
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Firebase Admin SDK (for Vercel, convert serviceAccountKey.json to base64 using encode.js)
# Run: node encode.js
# Then paste the output here for production deployment
FB_SERVICE_KEY=




